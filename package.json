    "export": "yarn build && next export",
    "lint": "next lint && stylelint stylelint **/**.css",
    "start": "next start",
    "test": "jest",
    "test:db": "cd firebase && firebase emulators:exec --only firestore --project demo-test ./firestore/test.sh",
    "test:export": "./tools/deploy-test/test.sh",
    "cypress": "cypress open",
    "tools:db:add": "ts-node -O '{\"module\": \"commonjs\"}' ./firebase/firestore/add.ts",
    "tools:db:fetch": "ts-node -O '{\"module\": \"commonjs\"}' ./firebase/firestore/fetch.ts",
    "tools:emulator": "yarn build:functions && cd firebase && firebase emulators:start --project demo-test"
  },
  "dependencies": {
    "date-fns": "^2.28.0",
    "firebase": "^9.6.10",
